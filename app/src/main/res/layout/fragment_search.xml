<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              tools:context="org.timreynolds.myapplication.SearchFragment">

    <RelativeLayout
            android:id="@+id/RelativeLayout01" android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <ImageButton android:id="@+id/search_text_button"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <EditText android:id="@+id/search_field"
                  android:layout_alignParentLeft="true"
                  android:layout_toLeftOf="@id/search_text_button"
                  android:layout_centerVertical="true"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:hint="Enter Search Text"
                  android:inputType="text"
                  android:layout_margin="5dp"
                  android:padding="10dp"
                  android:text=""
                  android:maxLines="1" />
    </RelativeLayout>

    <ListView
            android:id="@+id/list1"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
</LinearLayout>